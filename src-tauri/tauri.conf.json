{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "pluely",
  "version": "0.1.0",
  "identifier": "com.srikanthnani.pluely",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "pluely",
        "width": 700,
        "height": 600,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "resizable": false,
        "visibleOnAllWorkspaces": true,
        "skipTaskbar": false,
        "visible": true,
        "center": false,
        "contentProtected": true,
        "focus": false,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"],
    "resources": ["info.plist", "pluely.desktop"],
    "macOS": {
      "frameworks": [],
      "exceptionDomain": "",
      "signingIdentity": null,
      "entitlements": null,
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      },
      "allowDowngrades": false,
      "wix": {
        "language": "en-US",
        "template": null,
        "fragmentPaths": [],
        "componentGroupRefs": [],
        "componentRefs": [],
        "featureGroupRefs": [],
        "featureRefs": [],
        "mergeRefs": []
      },
      "nsis": {
        "template": null,
        "languages": ["English"],
        "customLanguageFiles": {},
        "displayLanguageSelector": false
      }
    },
    "linux": {
      "deb": {
        "depends": [
          "libasound2-dev",
          "libpulse-dev",
          "libwebkit2gtk-4.0-37",
          "libgtk-3-0",
          "libayatana-appindicator3-1"
        ],
        "desktopTemplate": "pluely.desktop"
      },
      "appimage": {
        "bundleMediaFramework": true
      },
      "rpm": {
        "depends": [
          "alsa-lib-devel",
          "pulseaudio-libs-devel",
          "webkit2gtk3-devel",
          "gtk3-devel"
        ]
      }
    }
  }
}
