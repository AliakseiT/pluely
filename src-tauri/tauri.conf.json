{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "open-cluely",
  "version": "0.1.0",
  "identifier": "com.srikanthnani.open-cluely",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "title": "open-cluely",
        "width": 700,
        "height": 600,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "resizable": false,
        "visibleOnAllWorkspaces": true,
        "skipTaskbar": false,
        "visible": true,
        "center": false,
        "contentProtected": true,
        "focus": false,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png"]
  }
}
